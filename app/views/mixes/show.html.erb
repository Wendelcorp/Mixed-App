<%= form_for @song do |f| %>

  <div class="field">
    <%= f.label :artist %><br />
    <%= f.text_field :artist %>
  </div>
  <div class="field">
    <%= f.label :name %><br />
    <%= f.text_field :name %>
  </div>
  <div class="field">
    <%= f.label :source %><br />
    <%= f.text_field :source %>
  </div>

  <%= f.hidden_field :mix_id, { :value => params[:id]} %>

  <div class="actions">
    <%= f.submit "Create song" %>
  </div>

<% end %>

<% @songs.each do |song| %>
  <%= song.artist %>
  <%= song.name %>
  <%= song.source %>
  <br>
<% end %>
